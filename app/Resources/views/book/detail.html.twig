{% extends '::base.html.twig' %}
{% block title %}Bdthèque | Détails de la BD{% endblock %}

{% block body %}
{% include "::header.html.twig" %}    
<div class="affichageBddetail">
        <div class="bd1">
            <img class="imagedetail"src="{{ asset('cover/115618_c.jpg') }}"title="bd one">
        </div>
        <div class="detailBddetail">
            <h3>{{book.title}}</h3>
            <div class="identity">
                <div class="auteur"><h4>Auteur:</h4>
                	<p><strong>Nom: </strong>{{book.illustrator.lastName}} </p>
                	<p><strong>Prénom:</strong> {{book.illustrator.firstName}}</p>
                	<p><strong>Aka:</strong> {{book.illustrator.aka}}</p>
                	<p><strong>BirthDate:</strong> {{book.illustrator.birthdate|date('d/m/y')}}</p>
                	<p><strong>DeathDate:</strong>{{book.illustrator.deathdate|date('d/m/y')}}</p>
                	<p><strong>Country:</strong> {{book.illustrator.country}}</p>
                </div>
                <div class="coloriste"><h4>Coloriste:</h4>
                	<p><strong>Nom:</strong> {{book.colorist.lastName}}</p>
                	<p><strong>Prénom:</strong>{{book.colorist.firstName}}</p>
                	<p><strong>Aka: </strong>{{book.colorist.aka}}</p>
                	<p><strong>BirthDate:</strong>{{book.colorist.birthdate|date('d/m/y')}}  </p>
                	<p><strong>DeathDate:</strong> {{book.colorist.deathdate|date('d/m/y')}}</p>
                	<p><strong>Country: </strong>{{book.colorist.country}}</p>
                </div>
                <div class="scenariste"><h4>Scénariste: </h4>
                	<p><strong>Nom:</strong> {{book.scenarist.lastName}}</p>
                	<p><strong>Prénom: </strong>{{book.scenarist.firstName}}</p>
                	<p><strong>Aka:</strong> {{book.scenarist.aka}}</p>
                	<p><strong>BirthDate: </strong>{{book.scenarist.birthdate|date('d/m/y')}}</p>
                	<p><strong>DeathDate:</strong>{{book.scenarist.deathdate|date('d/m/y')}}</p>
                	<p><strong>Country:</strong> {{book.scenarist.country}}</p>
                </div>
            </div>
            <div class="serie"><h4>Série: </h4>
            	<p><strong>Style:</strong>{{book.serie.style}}</p>
            	<p><strong>Comment: </strong>{{book.serie.comment}}</p>
            	<p><strong>Language:</strong> {{book.serie.language}}</p>
            </div>
            <div class="Bd"><h4>Bd: </h4>
            	<p><strong>Title: </strong>{{book.title}}</p>
            	<p><strong>publieur:</strong>{{book.publisher}}</p>
            	<p><strong>Isbn:</strong> {{book.isbn}}</p>
            	<p><strong>Pages:</strong>{{book.pages}}</p>
            </div>
        </div>
       	<div class="stockdetail">Stock: {{book.stock}}</div>
        <form class="ajouterdetail">
             <input type="submit" class="buttonadd" value="Ajouter au panier !">
        </form>
        <a class="retour" href="{{ path('bdloc_app_default_index')}}">Retour à la liste</a>
 </div>
{% include "::footer.html.twig" %} 
{% endblock %}